            </Grid>
 


            <!--右侧编辑器-->
            <Grid Grid.Column="1" Background="{DynamicResource ApplicationBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.8*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="文件列表" VerticalAlignment="Center" Margin="10 0" FontWeight="Bold"/>

                <!--文件查看器-->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8 0" Grid.Row="1">
                    <StackPanel Background="Transparent">
                        <ItemsControl ItemsSource="{Binding ViewModel.ImportFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:Card Margin="0 3">
                                        <ui:TextBlock Text="{Binding}" Foreground="#009faa" 
                                                          VerticalAlignment="Center" FontWeight="Bold"/>
                                    </ui:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!--属性编辑器-->
                <Border Padding="0 10 20 10" Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.36*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="1.5*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Name:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <ui:TextBox Grid.Column="1" VerticalAlignment="Center"/>

                        <TextBlock Text="UKey:" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Grid.Row="1"/>
                        <ui:TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                        <TextBlock Text="Des:" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Grid.Row="2"/>
                        <ui:TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Stretch" TextWrapping="Wrap"/>

                        <TextBlock Text="Link:" VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Grid.Row="3"/>
                        <ui:TextBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!--底部按钮-->
                <Grid Grid.Row="3" Margin="10 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.05*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="确认" HorizontalAlignment="Stretch"/>
                    <Button Content="取消" Grid.Column="2" HorizontalAlignment="Stretch"/>
                </Grid>
            </Grid>
        </Grid>

        <!--底部状态栏-->
        <Grid Grid.Row="3">
            <TextBlock Text="status bar" Margin="10 0"/>
        </Grid>
    </Grid>

</ui:FluentWindow>
